<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="129dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alarm_clock" />

    <Button
        android:id="@+id/buttonOptions"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ripple_effect_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/options" />

    <ImageView
        android:id="@+id/iv_dial"
        android:layout_width="341dp"
        android:layout_height="284dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_title"
        app:srcCompat="@drawable/dial" />

    <ImageView
        android:id="@+id/iv_minute"
        android:layout_width="6dp"
        android:layout_height="189dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dial"
        app:layout_constraintEnd_toEndOf="@+id/iv_dial"
        app:layout_constraintStart_toStartOf="@+id/iv_dial"
        app:layout_constraintTop_toTopOf="@+id/iv_dial"
        app:srcCompat="@drawable/minute" />

    <ImageView
        android:id="@+id/iv_hour"
        android:layout_width="6dp"
        android:layout_height="189dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dial"
        app:layout_constraintEnd_toEndOf="@+id/iv_dial"
        app:layout_constraintStart_toStartOf="@+id/iv_dial"
        app:layout_constraintTop_toTopOf="@+id/iv_dial"
        app:srcCompat="@drawable/hour"/>

    <ImageView
        android:id="@+id/iv_pivot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dial"
        app:layout_constraintEnd_toEndOf="@+id/iv_dial"
        app:layout_constraintStart_toStartOf="@+id/iv_dial"
        app:layout_constraintTop_toTopOf="@+id/iv_dial"
        app:srcCompat="@drawable/pivot" />

</androidx.constraintlayout.widget.ConstraintLayout>